<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:sun_or_rain.ViewModel"
             mc:Ignorable="d"
             x:Class="sun_or_rain.MainPage"
             Title="My favourite weather app!">
    <StackLayout>
        <Entry Placeholder="Insert a city here" Text=""/>
        <StackLayout Orientation="Horizontal"  HorizontalOptions="FillAndExpand">
            <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                <Button Text="View weather" Command="{Binding OnNewCity}"></Button>
            </StackLayout>
            <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                <Button Text="Add to favourites" Command="{Binding OnItemAdded}"></Button>
            </StackLayout>
        </StackLayout>
        

        <ListView 
              HasUnevenRows="True"
              BackgroundColor="#ffffff"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand"
              ItemSelected="onItemSelected"
              ItemsSource="{Binding FavouritesVar}"
              Margin="20" 
              x:Name="listView" >
            
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal"
                                 BackgroundColor="White"
                                 HorizontalOptions="FillAndExpand">
                            <Label Text="{Binding Cityname}" d:Text="{Binding .}"
                                Style="{DynamicResource ListItemTextStyle}" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand" />
                            <Button Text="X" Command="{Binding OnRemove}" WidthRequest="30"></Button>
                            
                        </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
        <StackLayout Orientation="Horizontal"  HorizontalOptions="FillAndExpand">
            <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                <Button Text="Save" Command="{Binding onSave}"></Button>
            </StackLayout>
        </StackLayout>
    </StackLayout>
</ContentPage>
